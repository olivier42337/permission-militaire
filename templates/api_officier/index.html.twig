{% extends 'base.html.twig' %}

{% block title %}Tableau de bord Officier{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="mb-4">Tableau de bord – Officier</h2>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Nom</h5>
                    <p class="card-text">{{ app.user.prenom }} {{ app.user.nom }}</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Unité supervisée</h5>
                    <p class="card-text">{{ app.user.unite }}</p>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-4">

    <div class="text-center">
        <a href="#" class="btn btn-primary mb-2">Voir les demandes à traiter</a>
        <a href="#" class="btn btn-secondary mb-2">Voir le planning global</a>
        <a href="#" class="btn btn-success mb-2">Gérer les utilisateurs</a>
    </div>
</div>
{% endblock %}
