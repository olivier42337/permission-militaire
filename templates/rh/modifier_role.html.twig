{% extends 'base.html.twig' %}

{% block title %}Modifier le rôle{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2>Modifier le rôle de {{ user.nom }} {{ user.prenom }}</h2>
    <form method="post">
        <div class="mb-3">
            <label for="role">Rôle</label>
            <select name="role" class="form-select">
                <option value="ROLE_MILITAIRE">Militaire</option>
                <option value="ROLE_OFFICIER">Officier</option>
                <option value="ROLE_RH">RH</option>
            </select>
        </div>
        <button type="submit" class="btn btn-success">Valider</button>
    </form>
</div>
{% endblock %}
